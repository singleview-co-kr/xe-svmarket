<query id="getPkgDetail" action="select">
	<tables>
		<table name="svmarket_package" />
	</tables>
	<columns>
        <column name="package_srl"/>
        <column name="module_srl"/>
		<column name="category_node_srl" />
		<column name="title"/>
		<column name="thumb_file_srl" />
        <column name="og_description" />
		<column name="description" />
        <column name="homepage"/>
        <column name="updatetime" />
        <column name="regdate" />
	</columns>
    <conditions>
		<condition operation="equal" column="package_srl" var="package_srl" />
	</conditions>
</query>